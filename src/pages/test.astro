---
import Particles from 'astro-particles';

const options = {
  particles: {
    number: { value: 160, density: { enable: true, area: 800 } },
    color: { value: '#ffffff' },
    shape: { type: 'circle' },
    size: { value: 3, random: true },
    move: { enable: true, speed: 1 },
  },
};
---

<Particles id="tsparticles" options={options} style="position: absolute; width: 100%; height: 100%;" />
